{
	"name": "@lesjoursfr/html-to-epub",
	"version": "3.1.3",
	"description": "A library to generate EPUB from HTML. Inspired by epub-gen.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-epub",
	"homepage": "https://github.com/lesjoursfr/html-to-epub#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-epub/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "18.x || 20.x"
	},
	"keywords": [
		"epub",
		"generator",
		"ebook",
		"html"
	],
	"type": "module",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm -r .yarn/cache/ && rm yarn.lock && yarn",
		"check-lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
		"format": "prettier --write .",
		"build": "tsc",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' ava"
	},
	"dependencies": {
		"archiver": "^5.3.1",
		"axios": "^1.4.0",
		"diacritics": "^1.3.0",
		"ejs": "^3.1.9",
		"entities": "^4.5.0",
		"fs-extra": "^11.1.1",
		"mime": "^3.0.0",
		"rehype-parse": "^8.0.4",
		"rehype-stringify": "^9.0.3",
		"unified": "^10.1.2",
		"unist-util-visit": "^4.1.2",
		"uslug": "^1.0.4"
	},
	"devDependencies": {
		"@tsconfig/node18": "^2.0.1",
		"@types/archiver": "^5.3.2",
		"@types/diacritics": "^1.3.1",
		"@types/ejs": "^3.1.2",
		"@types/fs-extra": "^11.0.1",
		"@types/mime": "^3.0.1",
		"@types/node": "^20.2.5",
		"@types/uslug": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"@typescript-eslint/parser": "^5.59.9",
		"ava": "^5.3.0",
		"eslint": "^8.42.0",
		"eslint-config-prettier": "^8.8.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"packageManager": "yarn@3.6.0"
}
